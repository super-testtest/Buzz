<config>
    <modules>
        <Mage_Usaepay>
            <version>1.1.7</version>
        </Mage_Usaepay>
    </modules>
    <global>
        <blocks>
            <usaepay><class>Mage_Usaepay_Block</class></usaepay>
        </blocks>
        <models>
            <usaepay>
                <class>Mage_Usaepay_Model</class>
            </usaepay>
        </models>
        <resources>
            <usaepay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </usaepay_write>
            <usaepay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </usaepay_read>
        </resources>
    </global>
    <default>
        <payment>
            <usaepay>
                  <model>usaepay/CCPaymentAction</model>
                  <title>USAePay Gateway</title>
                  <order_status>pending</order_status>
                  <title>Credit Card</title>
                  <active>0</active>
				  <extendedfraudprofiling>0</extendedfraudprofiling>
				  <usesuspectedfraud>0</usesuspectedfraud>
                  <allowspecific>0</allowspecific>
                  <cctypes>AE,VI,MC,DI</cctypes>
                  <payment_action>authorize</payment_action>
                  <currency>USD</currency>
            </usaepay>
        </payment>
    </default>
</config>
